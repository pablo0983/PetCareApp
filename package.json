{
  "name": "petcare-app",
  "version": "3.0.2",
  "private": true,
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject"
  },
  "dependencies": {
    "@react-native-community/datetimepicker": "8.4.4",
    "@react-native-picker/picker": "2.11.1",
    "expo": "~54.0.0",
    "expo-barcode-scanner": "~12.0.0",
    "expo-image-loader": "^6.0.0",
    "expo-image-picker": "~17.0.8",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-maps": "1.20.1",
    "react-native-modal-datetime-picker": "15.0.0",
    "react-native-nfc-manager": "^3.16.3",
    "react-native-reanimated": "~4.1.1",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "^0.21.0",
    "react-native-webview": "13.15.0",
    "react-native-worklets": "0.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.0"
  },
  "doctor": {
    "ignore": ["duplicateDependencies"],
    "reactNativeDirectoryCheck": {
      "listUnknownPackages": false,
      "ignore": ["react-native-nfc-manager", "expo-barcode-scanner"]
    }
  },
  "expo": {
    "name": "PetCareApp",
    "slug": "petcare-app",
    "version": "3.0.2",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/pata.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.pablopetry.petcareapp",
      "buildNumber": "9",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "Necesitamos acceso a la cámara para adjuntar imágenes en incidentes.",
        "NSPhotoLibraryAddUsageDescription": "Necesitamos permiso para guardar la firma como imagen en tu dispositivo.",
        "NSPhotoLibraryUsageDescription": "Necesitamos acceso a tu galería para adjuntar o guardar imágenes relacionadas con el incidente."
      }
    },
    "android": {
      "package": "com.pablopetry.PetCareApp",
      "versionCode": 11,
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/icon.png"
    },
    "extra": {
      "eas": {
        "projectId": "daafa29d-29fd-4b32-8b99-be3cbe6833ad"
      }
    },
    "plugins": [
      "expo-barcode-scanner"
    ],
    "owner": "pablopetry"
  },
  "resolutions": {
    "expo-image-loader": "6.0.0"
  }
}
